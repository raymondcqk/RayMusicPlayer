<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/list_item_background">

    <com.raymondqk.raymusicplayer.customview.AvatarCircle
        android:id="@+id/avatar_list_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/musicplayer_512px"
        app:StrokeColor="@color/white"
        app:StrokeWidth="2dp">
    </com.raymondqk.raymusicplayer.customview.AvatarCircle>

    <TextView
        android:id="@+id/tv_title_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/avatar_list_item"
        android:text="好想你"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_artist_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_title_list_item"
        android:layout_below="@+id/tv_title_list_item"
        android:layout_marginTop="2dp"
        android:text="朱主爱"
        android:textColor="@color/white"
        android:textSize="12sp"/>


</RelativeLayout>